*
	position relative

body.page
	width 100%
	background-size cover
	background-repeat no-repeat
	background-position center center
	background-attachment fixed
    
body.main
	background-image url("../images/pages/foto_main.jpg")
	
body.dormitorio
	background-image url("../images/pages/dormitorio-principal.jpg")

body.dormitorio-ninos
	background-image url("../images/pages/dormitorio-ninos.jpg")

body.sala
	background-image url("../images/pages/sala.jpg")
	
.content-page
	float left
	width 93%
	height 100%
	
.logo
	display block
	margin 0 auto
	
.mbl
	display none
	
.header-principal
	display none
	background c-1
	height 126px
	position fixed
	right 0
	left 0
	z-index 22
	
.vn
	color c-1
	font-size 13px
	top 23px
	position absolute
	padding-left 23px
	text-shadow 1px 1px #562813
	
	&:before
		content ""
		background-image url("../images/sprite-promart.png")
		width 17px
		height 17px
		display block
		position absolute
		left 0px
		top 5px

.ver_navegacion:before
	background-position -16px -229px

.ir_promart:before
	background-position: -40px -226px
	height 17px
	top 2px

.ver_navegacion
	left 35px

.ocultar_navegacion
	top 140px !important

.ir_promart
	right 47px
	text-decoration underline
	
.tooltip_elemento
	position relative

.tooltip
	display block
	position absolute
	width 200px 
	padding 10px
	margin 5px 0 12px 0  
	z-index 100
	background rgba(0, 0, 0, 0.7)
	color #fff
	text-align center
	font-weight bold
	font-size 11px
	border-radius 10px
	top 100%
	left 50%
	margin-left -82px

	&:after
		content " "
		position absolute
		bottom 100%
		left 50%
		margin-left -5px
		border-width 10px
		border-style solid
		border-color transparent transparent  rgba(0, 0, 0, 0.7) transparent

	strong
		font-family t-2
		display block
		font-size 15px

	span
		display block
		font-size 12px

.sprite
	background-image url("../images/sprite-promart.png")

.vermas
	background-position -31px -248px
	display block
	content ""
	color transparent
	height 50px
	position absolute
	width 50px

	&:hover
		background-position -83px -229px
		height: 67px
		width: 67px

.btn-nav
	position relative
	
	.bn-next
		display block
		text-align center
		position absolute
		bottom 20px
		width 100%
		font-size 15px

		.btn-siguiente
			color #ffffff
			padding-right 24px

			&:after
				content ""
				background-image url("../images/sprite-promart.png")
				width 26px
				height 24px
				display block
				position absolute
				right 0px
				top 0px
				background-position 9px -274px

.txshadow
	text-shadow 1px 1px #562813

.btn-cajones
	width 100%
	height 100%