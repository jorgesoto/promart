.menu
    background-color c-1
    float left
    height 100%
    max-width 7%
    overflow hidden
    width 86px
    
.menu ul.nav li
	margin 5px auto
	overflow hidden
	display block
	width 50px
	text-align center

menu ul.nav li.menu-inicio
	margin-top 16px

.menu ul.nav li.menu-muebles-especial
	margin-top 110px
	margin-bottom 17px

.menu ul.nav li a
	font-size 9px
	color #5f5f5f
	line-height 10px
	display block
	height 100%
	width 100%

.menu .icon-menu
	background-repeat no-repeat
	font-family t-1
	background-color #ebebeb
	border-radius 50%
	display block
	height 38px
	width 38px
	margin auto auto 7px auto
	font-size 33px
	color #898989
	line-height 38px

.menu ul.nav li.menu-inicio:hover a .icon-menu, .menu ul.nav li.menu-inicio.active a .icon-menu, .main  .menu ul.nav li.menu-inicio:hover .linea, .main  .menu ul.nav li.menu-inicio.active .linea
	background-color c-3
	color #b80034
	
.menu ul.nav li.menu-dormitorio-principal:hover a .icon-menu, .dormitorio .menu ul.nav li.menu-dormitorio-principal.active a .icon-menu, .menu ul.nav li.menu-dormitorio-principal:hover .linea, .dormitorio .menu ul.nav li.menu-dormitorio-principal.active .linea
	background-color c-4
	color #005e73
	
.menu ul.nav li.menu-dormitorio-ninos:hover a .icon-menu, .menu ul.nav li.menu-dormitorio-ninos.active a .icon-menu, .menu ul.nav li.menu-dormitorio-ninos:hover .linea, .menu ul.nav li.menu-dormitorio-ninos.active .linea
	background-color c-5
	color #005e73

.menu ul.nav li.menu-sala:hover a .icon-menu, .menu ul.nav li.menu-sala.active a .icon-menu, .menu ul.nav li.menu-sala:hover .linea, .menu ul.nav li.menu-sala.active .linea
	background-color c-6
	color #c1783d

.menu-compartir .icon-share
	font-size 20px

.menu .linea
	display block
	margin 0 auto
	width 1px
	background-color #ebebeb
	height 22px