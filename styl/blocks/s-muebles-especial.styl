.muebles-especial
	
	.header-especial
		background-image url("../images/muebles-del-especial.jpg")
		width 100%
		min-height 133px
		background-size cover
		
		.titulo-header
			max-width 446px
			width 30%
			display block
			float left
			color #fff
			text-align right
			font-size 36px
			letter-spacing 1px
			margin-top 50px
		
		.menu-especial
			width 65%
			overflow hidden
			
			.nav-especial
				li.item-menu.activo
					span.ico
						background-color c-2
						border 2px solid c-2
						color c-1
					
					a
						color c-1
				
				li.item-menu
					width 24%
					float left
					margin-left 1%
					min-height 134px
					
					&:hover
						span.ico
							background-color c-2
							border 2px solid c-2
							color c-1	
						
						a
							color c-1
					
					span.ico
						display block
						width 54px
						height 54px
						border 2px solid c-12
						border-radius 50%
						margin-top 32px
						text-align center
						color c-12
						font-size 35px
						line-height 54px
						float left
						margin-left 20px
					
					a
						font-family t-2
						font-size 15px
						color c-12
				
						.t-ico
							margin-top 32px
							height 54px
							display flex
							align-items center
							padding-left 15px
							line-height normal	
							float left
							max-width 55%
	
	.group-item
		width 90%
		margin 25px auto auto auto
	
		.item-product
			text-align: center;
			margin-bottom 35px
			
			p
				margin 0
			
			.productName
				font-size 15px
				font-weight normal
				margin-top 10px
				margin-bottom 3px
			
			.productPrecio
				font-size 18px
				font-family t-2
				margin-top 15px
				
				.simbolPrecio
					font-size 11px
			
			.bnsProduct
				max-width 220px
				overflow hidden
				margin 15px auto auto auto
			
				.bn
					width 48%
					font-size 10px
					min-height 27px
					padding 0
					line-height 27px
				
				.ver-detalle
					float left

				.agregar
					float right